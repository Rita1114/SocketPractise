name: Artifact Test

on:
  push:
    branches: [ main ]

jobs:
  test:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout
        uses: actions/checkout@v3

      - name: Create file
        run: echo "Hello world" > test.txt

      - name: Upload artifact
        uses: actions/upload-artifact@v3
        with:
          name: hello-artifact
          path: test.txt
